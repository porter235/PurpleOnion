@model PurpleOnion.Models.Order
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Purple Onion</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template
    <link href="css/business-frontpage.css" rel="stylesheet">-->
</head>
<h2>Delete</h2>

<p>
    Are you sure you want to delete this order?
</p>
<ul>
    <li>Account Name: @Model.AccountName</li>
    <li>Pick Up Time: @Model.PickUpTime</li>
    <li>Items: @Model.Items</li>
</ul>

@using (Html.BeginForm("DoDelete", "Orders", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete Order" />
    @Html.ActionLink("No, back to orders", "Index")
}
