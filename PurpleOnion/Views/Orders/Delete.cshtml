@model PurpleOnion.Models.Order
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you want to delete this order?
</p>
<ul>
    <li>Account Name: @Model.AccountName</li>
    <li>Pick Up Time: @Model.PickUpTime</li>
    <li>Items: @Model.Items</li>
</ul>

@using (Html.BeginForm("DoDelete", "Orders", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete Order" />
    @Html.ActionLink("No, back to orders", "Index")
}
