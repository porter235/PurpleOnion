@model PurpleOnion.Models.Order

<div class=" form-group">
    @Html.LabelFor(m => m.AccountName)
    @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", required = "required" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.PickUpTime)
    @Html.TextBoxFor(m => m.PickUpTime, new { @class = "form-control", required = "required" })
</div>

<div class=" form-group">
    @Html.LabelFor(m => m.Items)
    @Html.TextAreaFor(m => m.Items, new { @class = "form-control", required = "required" })
</div>

@Html.HiddenFor(m => m.Id)
<input type="submit" class="btn btn-primary" value="Save" />