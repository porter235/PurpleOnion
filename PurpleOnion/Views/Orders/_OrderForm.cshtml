@model PurpleOnion.Models.Order
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Purple Onion</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template
    <link href="css/business-frontpage.css" rel="stylesheet">-->
</head>
<header>
    <img class="card" src="~/images/space.png" />
</header>
<div class=" form-group">
    @Html.LabelFor(m => m.AccountName)
    @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", required = "required" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.PickUpTime)
    @Html.TextBoxFor(m => m.PickUpTime, new { @class = "form-control", required = "required" })

</div>

<div class=" form-group">
    @Html.LabelFor(m => m.Items)
    @Html.TextAreaFor(m => m.Items, new { @class = "form-control", required = "required" })
</div>

@Html.HiddenFor(m => m.Id)
<input type="submit" class="btn btn-primary" value="Save" />
